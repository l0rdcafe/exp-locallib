extends layout

block content
  h1 #{title}: #{tag.name}

  if tags_books.length
    p #[strong Delete the following books before attempting to delete this tag.]

    div(style="margin-left:20px;margin-top:20px")
      h4 Books

      dl
        each book in tags_books
          dt
            a(href="/catalog/book/"+book.id) #{book.title}
          dd #{book.summary}
  else
    p Do you really want to delete this Tag?

    form(method="POST" action="")
      div.form-group
        input#tagid.form-control(type="hidden", name="tagid", required="true" value=tag.id)
      button.btn.btn-primary(type="submit") Delete
